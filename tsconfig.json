{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["@dcloudio/types", "vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
  },
  "include": [
      "src/**/*.d.ts",
      "src/**/*.ts",
      "src/**/*.js",
      "src/**/*.vue",
      "./types/*",
      "auto-imports.d.ts"
  ],
}
